<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Design_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/voice_avatar_text_view"
        android:layout_width="@dimen/Android_Design_rhythmOneAndAHalf"
        android:layout_height="@dimen/Android_Design_rhythmOneAndAHalf"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/Android_Design_rhythmTwoThirds"
        android:background="@drawable/button_grey_rounded_all"
        android:gravity="center"
        android:textAppearance="@style/Droid.TextAppearance.ExtraLargeBlack" />

    <TextView
        android:id="@+id/voice_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/Android_Design_rhythmThird"
        android:gravity="center"
        android:textAppearance="@style/Droid.TextAppearance.LargeBlack" />

    <TextView
        android:id="@+id/voice_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/Android_Design_rhythmThird"
        android:gravity="center"
        android:textAppearance="@style/Droid.TextAppearance.LargeBlack" />

    <TextView
        android:id="@+id/voice_connect_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/Android_Design_rhythmThird"
        android:text="@string/connecting"
        android:textAppearance="@style/Droid.TextAppearance.MediumBlack" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/Android_Design_rhythmThird"
        android:textAppearance="@style/Droid.TextAppearance.MediumBlack"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="@dimen/Android_Design_rhythmThird"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_voice_speakerphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_mic" />

        <ImageView
            android:id="@+id/imageview_voice_hangup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/Android_Design_rhythmThird"
            android:layout_marginRight="@dimen/Android_Design_rhythmThird"
            android:src="@drawable/ic_end_call" />

        <ImageView
            android:id="@+id/imageview_voice_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_sound" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.bstar.powerdata.views.ui.CustomDialPad
            android:id="@+id/custom_dial_pad_voice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/Android_Design_rhythmThird"
            android:layout_marginRight="@dimen/Android_Design_rhythmThird" />
    </ScrollView>

</LinearLayout>

